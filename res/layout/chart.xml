<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceRecord" >
    
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ZFF" />
    
    <Button
        android:layout_height="wrap_content"
        android:layout_width = "wrap_content"
        android:text = "Original"
        android:id = "@+id/OriginalButton"
        android:onClick = "clickRecord"/>
    
    <Button 
        android:id = "@+id/NewButton"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:onClick = "clickPlay"
        android:text = "Silence-Removed"
        android:layout_toRightOf="@id/OriginalButton"/>
    
    <Button
        android:id = "@+id/playRand"
        android:layout_height= "wrap_content"
        android:layout_width="wrap_content"
        android:onClick = "playFast"
        android:text="Summary"
        android:layout_toRightOf="@id/NewButton"/>
    
    
    
  
  </RelativeLayout>
